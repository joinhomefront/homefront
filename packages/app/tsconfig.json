{
  "extends": "@homefront/tsconfig/internal-package.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "jsxImportSource": "nativewind",
    "baseUrl": ".",
    "paths": {
      "@homefront/app/*": ["./*"]
    },
    "types": ["nativewind/types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "../api/src", "../ui/src"],
  "exclude": ["node_modules", "dist"]
}
