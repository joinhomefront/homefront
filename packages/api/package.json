    "@homefront/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "h3-js": "^4.1.0",
    "lexorank": "^1.0.5",
    "nanoid": "^5.0.9",
    "superjson": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@homefront/eslint-config": "workspace:*",
    "@homefront/prettier-config": "workspace:*",
    "@homefront/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
